 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>
<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
<div class="product--imagen">
    <?php
        $_img = '<img id="image" src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(562,843).'" alt="'.$this->escapeHtml($this->getImageLabel()).'" title="'.$this->escapeHtml($this->getImageLabel()).'" />';
        echo $_img;
    ?>
</div>

<?php else: ?>
<div class="product--imagen">
    <?php
        $_img = '<img id="image" src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(562,843).'" alt="'.$this->escapeHtml($this->getImageLabel()).'" title="'.$this->escapeHtml($this->getImageLabel()).'" />';
        echo $_img;
    ?>
</div>
<?php endif; ?>
<?php if (count($this->getGalleryImages()) > 0): ?>

<div class="more-views">
    <ul>
    <?php foreach ($this->getGalleryImages() as $_image): ?>
        <?php if(($_image->getLabel()!="color")):?>
        <li url="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'producto', $_image->getFile())->resize(562, 843); ?>">
            <a href="#" title="<?php echo $this->escapeHtml($_image->getLabel()) ?>"><img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'producto', $_image->getFile())->resize(116, 183); ?>" alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>" />

            </a>
        </li>
        <?php endif;?>
    <?php endforeach; ?>
    </ul>
</div>
<?php endif; ?>
