<?xml version="1.0"?>
<layout version="0.1.0">
    <sizechart_index_show>
	    <reference>
            <block type="sizechart/sizechart" name="root" template="sizechart/sizechart.phtml"></block>
        </reference>
    </sizechart_index_show>
	<catalog_product_view>
		<reference name="head">
			<action method="addCss"><stylesheet>css/sizechart.css</stylesheet></action>
		</reference>
		<reference name="product.info.options.wrapper">
			<block type="sizechart/link" name="sizechart_link" as="sizechart-link" template="sizechart/sizechart-link.phtml"/>
		</reference>
       
	</catalog_product_view>
	
	
</layout>
