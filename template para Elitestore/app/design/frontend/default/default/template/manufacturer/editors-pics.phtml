									<div class="contenido-editors-pics">
										<div class="manufacturer"><?php echo $manufacturerName ?></div>
										<div class="nombre"><?php echo $producto['name'] ?></div>
										<div class="precio"><?php echo Mage::helper('core')->currency($producto['price'], true, false); ?></div>
									</div></a>
								</li>		
							<?php endforeach;?>
						</ul>
					</div>
				<?php endif;
			endforeach;
			?>
			<div class="separador-editors-pics"></div>
			<?php 
		endif;
	endif;
	

