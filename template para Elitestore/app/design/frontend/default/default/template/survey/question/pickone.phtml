<ul class="survey_question">
<?php $i=0; $count=count($this->getFieldsObjects()); ?>
<?php foreach($this->getFieldsObjects() as $field): ?>
<?php $id = $field->getId(); $question_id = $field->getQuestionId(); ?>
	<li class="<?php echo (($count-1==$i)?'last ':'').($i%2?'even':'odd'); ?>">
		<input type="radio"
			name="pickone_<?php echo $question_id; ?>"
			class="radio question_pickone validate-one-required-by-name"
			id="question_pickone_<?php echo $id; ?>"
			value="<?php echo $id; ?>"<?php echo $this->getPickoneSelected('pickone_'.$question_id, $id); ?><?php echo ($this->isViewMode() ? ' disabled="true"' : ''); ?> />
		<span class="label">
			<label for="question_pickone_<?php echo $id; ?>"><?php echo $field->getFieldText(); ?></label>
		</span>
	</li>
<?php $i++; endforeach; ?>
</ul>