<?xml version="1.0"?>
<config>
	<sections>
		<product_info>
			<groups>
				<orderbyrequest_config translate="label">
					<label>Order By Request Contact Configuration</label>
						<frontend_type>text</frontend_type>
						<sort_order>10</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
						<fields>
							<email_obr_sender>
								<label>Order by Request Email Sender</label>
								<frontend_type>select</frontend_type>
								<source_model>adminhtml/system_config_source_email_identity</source_model>
								<sort_order>5</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							</email_obr_sender>
							<email_obr_receive_contact_form translate="label">
								<label>Order by Request Recipient Email</label>
								<frontend_type>textarea</frontend_type>                            
								<sort_order>10</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
								<comment><![CDATA[different emails separated by comma (,)]]></comment>
							</email_obr_receive_contact_form>
							<email_obr_template_sent_to_customer>
								<label>Order by Request Email template sent to customer </label>
								<frontend_type>select</frontend_type>
								<source_model>adminhtml/system_config_source_email_template</source_model>
								<sort_order>20</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							</email_obr_template_sent_to_customer>
							<email_obr_template_sent_to_admin>
								<label>Order by Request Email template sent to admin </label>
								<frontend_type>select</frontend_type>
								<source_model>adminhtml/system_config_source_email_template</source_model>
								<sort_order>30</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							</email_obr_template_sent_to_admin>
						</fields>
				</orderbyrequest_config>
			</groups>
		</product_info>
	</sections>
</config>
