<?xml version="1.0"?>
<config>
      <sections>
        <contactus translate="label" module="adminbanners">                    
            <label>Elite Contacts Us</label>
            <tab>elite</tab>
            <frontend_type>text</frontend_type>
            <sort_order>3</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>            
                <groups>
                    <opciones translate="label"> 
                      <label>Opciones de los emails</label>
                      <frontend_type>text</frontend_type>
                      <sort_order>0</sort_order>
                      <show_in_default>1</show_in_default>
                      <show_in_website>1</show_in_website>
                      <show_in_store>1</show_in_store>
                        <fields>
                            <departamentos translate="label comment">
                                <label>Departamentos</label>
                                <comment><![CDATA[One department per line. Comma-delimited department name and email. If department is defined then Email recipient will be replaced with department's Email<br/>
                                            <b>Example</b>:<br/>Sales Department,sales@example.com<br/>Support Department,support@example.com]]>
                                </comment>
                                <frontend_type>textarea</frontend_type>
                                <sort_order>1</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </departamentos>
                            <sender_copy_cutomer translate="label">
                                <label>Send a Copy to Sender</label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_yesno</source_model>
                                <sort_order>2</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </sender_copy_cutomer>
                            <email_sent_to_customer>
                                <label>Email template sent to customer </label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_email_template</source_model>
                                <sort_order>20</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </email_sent_to_customer>
                            <email_sent_to_admin>
                                <label>Email template sent to admin </label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_email_template</source_model>
                                <sort_order>30</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </email_sent_to_admin>
                        </fields>
                    </opciones>     
                </groups>
        </contactus>        
      </sections>
</config>
