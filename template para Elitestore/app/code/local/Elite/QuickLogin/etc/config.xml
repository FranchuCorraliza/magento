<?xml version="1.0"?>
<config>
    <modules>
        <Elite_QuickLogin>
            <version>1.0.0</version>
        </Elite_QuickLogin>
    </modules>
    <frontend>
        <events>
            <controller_action_postdispatch_customer_account_resetpasswordpost>
                <observers>
                    <elite_quickLogin>
                        <class>elite_quickLogin/observer</class>
                        <method>setForgotPasswordRedirect</method>
                    </elite_quickLogin>
                </observers>
            </controller_action_postdispatch_customer_account_resetpasswordpost>
        </events>
        <routers>
            <customer>
                <args>
                    <modules>
                        <Elite_QuickLogin before="Mage_Customer">Elite_QuickLogin_Customer</Elite_QuickLogin>
                    </modules>
                </args>
            </customer>
        </routers>
        <layout>
            <updates>
                <quicklogin>
                    <file>quicklogin.xml</file>
                </quicklogin>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <elite_quickLogin>
                <class>Elite_QuickLogin_Model</class>
            </elite_quickLogin>
        </models>
    </global>
</config>