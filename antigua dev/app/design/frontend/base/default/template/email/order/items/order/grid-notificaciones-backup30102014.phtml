<?php $_item = $this->getItem() ?>
<?php $_order = $this->getItem()->getOrder() ?>
<?php $product =  Mage::getModel('catalog/product')->loadByAttribute('sku',$this->getSku($_item)); ?>

<?php
/******************************************************************************************/
/* Necesitamos obtener el producto configurable y el valor del atributo correspondiente */
$simpleProductId = $product->getId();
$parentIds = Mage::getResourceSingleton('catalog/product_type_configurable') ->getParentIdsByChild($simpleProductId); 
$product_conf = Mage::getModel('catalog/product')->load($parentIds[0]);
$product_simple = Mage::getModel('catalog/product')->load($simpleProductId);
$color = $product_simple->getData('color');
$product_gallery = $product_conf->getMediaGalleryImages();
$imgcount = count($product_gallery);
$product_base = array();
$theSizes = Mage::helper('colorselectorplus')->getImageSizes();
if($imgcount > 1){
	$imgIdsBase = array();
	$cjm_colorselector_base = unserialize($product_conf->getCjm_imageswitcher());
	if($cjm_colorselector_base) {
		foreach($cjm_colorselector_base as $cjm_colorselectorItem => $cjm_colorselectorVal) {
			$imgIdsBase[$cjm_colorselectorItem]['colorval'] = $cjm_colorselectorVal; }
	}
	if($cjm_colorselector_base) {
		foreach ($product_gallery as $_image )
			{
 				$product_base['color'][] = strval($imgIdsBase[$_image['value_id']]['colorval']);
				$product_base['image'][] = strval(Mage::helper('catalog/image')->init($_product, 'base', $_image->getFile())->resize($theSizes['list']['width'],$theSizes['list']['height']));
			}
	}
}

$image = Mage::helper('colorselectorplus')->findColorImage($color,$product_base,'color', 'image'); 

/******************************************************************************************/


?>
