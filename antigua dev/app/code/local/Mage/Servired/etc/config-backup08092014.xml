<?xml version="1.0"?>
<config>
    <modules>
        <Mage_Servired>
            <version>1.1.3</version>
            <depends>
                <Mage_Paygate />
            </depends>
        </Mage_Servired>
    </modules>
    <global>
		<!-- VER PARA MULTISHIPPING-->
		<!--
		<rewrite>
			<servired>
				<from><![CDATA[#^/checkout/multishipping/overviewPost/$#]]></from>
				<to>/servired/multishipping_overview</to>
			</servired>
		</rewrite>
		-->

        <models>
            <servired>
                <class>Mage_Servired_Model</class>
                <resourceModel>servired_mysql4</resourceModel>
            </servired>
            <servired_mysql4>
                <class>Mage_Servired_Model_Mysql4</class>
                <entities>
                    <api_debug>
                        <table>servired_api_debug</table>
                    </api_debug>
                </entities>
            </servired_mysql4>
        </models>

        <resources>
            <servired_setup>
                <setup>
                    <module>Mage_Servired</module>
                    <class>Mage_Servired_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </servired_setup>
            <servired_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </servired_write>
            <servired_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </servired_read>
        </resources>
        <blocks>
            <servired>
                <class>Mage_Servired_Block</class>
            </servired>
        </blocks>
    </global>

    <frontend>
        <secure_url>
            <servired_standard>/servired/standard</servired_standard>
        </secure_url>
        <routers>
            <servired>
                <use>standard</use>
                <args>
                    <module>Mage_Servired</module>
                    <frontName>servired</frontName>
                </args>
            </servired>
        </routers>
        <translate>
            <modules>
                <Mage_Servired>
                    <files>
                        <default>Mage_PaymentServired.csv</default>
                    </files>
                </Mage_Servired>
            </modules>
        </translate>
        <layout>
            <updates>
                <servired_standard_redirect>
                    <file>servired.xml</file>
                </servired_standard_redirect>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <translate>
            <modules>
                <Mage_Servired>
                    <files>
                        <default>Mage_PaymentServired.csv</default>
                    </files>
                </Mage_Servired>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <servired>
                                            <title>Servired Section</title>
                                        </servired>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <default>
        <payment>
            <servired_standard>
                <active>1</active>
                <allowspecific>0</allowspecific>
                <autoinvoice>O</autoinvoice>
                <error_status>canceled</error_status>
                <merchanturl>{{secure_base_url}}/servired/standard/callback</merchanturl>
                <merchanturlok>/checkout/onepage/success/</merchanturlok>
                <model>servired/standard</model>
                <order_status>pending</order_status>
                <redirect_status>processing</redirect_status>
                <sendmailorderconfirmation>1</sendmailorderconfirmation>
                <signaturetype>2</signaturetype>
                <title>Servired </title>
                <transaction_type>O</transaction_type>
                <urlservired>2</urlservired>
                <windowstate>2</windowstate>
            </servired_standard>
        </payment>
    </default>
</config>