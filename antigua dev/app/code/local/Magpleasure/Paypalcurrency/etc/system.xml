<config>
    <sections>
        <payment>
            <groups>
                <paypal_payments>
                    <express_checkout>
                        <fields>
                            <express_checkout_required>
                                <fields>
                                    <express_checkout_required_express_checkout>
                                        <fields>
                                            <xcom_app_id extends="//paypal_payments/payflow_advanced//xcom_app_id" />
                                        </fields>
                                    </express_checkout_required_express_checkout>
                                </fields>
                            </express_checkout_required>
                        </fields>
                    </express_checkout>
                    <payments_pro_hosted_solution>
                        <fields>
                            <pphs_required_settings>
                                <fields>
                                    <xcom_app_id extends="//paypal_payments/payflow_advanced//xcom_app_id" />
                                </fields>
                            </pphs_required_settings>
                        </fields>
                    </payments_pro_hosted_solution>
                    <wpp>
                        <fields>
                            <wpp_required_settings>
                                <fields>
                                    <wpp_and_express_checkout>
                                        <fields>
                                            <xcom_app_id extends="//paypal_payments/payflow_advanced//xcom_app_id" />
                                        </fields>
                                    </wpp_and_express_checkout>
                                </fields>
                            </wpp_required_settings>
                        </fields>
                    </wpp>
                    <payflow_link>
                        <fields>
                            <payflow_link_required>
                                <fields>
                                    <payflow_link_express_checkout>
                                        <fields>
                                            <xcom_app_id extends="//paypal_payments/payflow_advanced//xcom_app_id" />
                                        </fields>
                                    </payflow_link_express_checkout>
                                </fields>
                            </payflow_link_required>
                        </fields>
                    </payflow_link>

                    <payflow_advanced>
                        <fields>
                            <required_settings>
                                <fields>
                                    <express>
                                        <fields>
                                            <xcom_app_id translate="label">
                                                <label>X.COM Application Id</label>
                                                <sort_order>120</sort_order>
                                                <frontend_type>obscure</frontend_type>
                                                <config_path>paypal/wpp/xcom_app_id</config_path>
                                                <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                                                <show_in_default>1</show_in_default>
                                                <show_in_website>1</show_in_website>
                                                <shared>1</shared>
                                                <comment><![CDATA[See <a href="http://www.magpleasure.com/paypal_currency_get_app_id.html" target="_blank">Instructions</a> on getting X.COM Application Id that is required to receive currency rates from PayPal.]]></comment>
                                            </xcom_app_id>
                                        </fields>
                                    </express>
                                </fields>
                            </required_settings>
                        </fields>
                    </payflow_advanced>
                </paypal_payments>
            </groups>
        </payment>
        <paypal>
            <groups>
                <api>
                    <fields>
                        <xcom_app_id translate="label">
                            <label>X.COM Application Id</label>
                            <sort_order>26</sort_order>
                            <frontend_type>obscure</frontend_type>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <comment><![CDATA[See <a href="http://www.magpleasure.com/paypal_currency_get_app_id.html" target="_blank">Instructions</a> on getting X.COM Application Id that is required to receive currency rates from PayPal.]]></comment>
                        </xcom_app_id>
                    </fields>
                </api>
            </groups>
        </paypal>
    </sections>
</config>